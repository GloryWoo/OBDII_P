<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    
    android:layout_gravity="center" 
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/autoJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Passive Join"
        android:textSize="12sp"
        android:textColor="#024467"
        android:textStyle="bold" >
    </CheckBox>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/username_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="4dp"
            android:singleLine="true"
            android:text="Name: "
            android:textColor="#024467"
            android:textSize="12sp"
            android:textStyle="bold" />
        
        <ScrollView 
            android:id="@+id/ScrollView1"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:scrollbarStyle="outsideOverlay"
    		android:layout_toRightOf="@+id/username_tag">
    		<LinearLayout
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:orientation="vertical">
		        <EditText
		            android:id="@+id/userName_s"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="8dp"
		            android:layout_weight="0.6"
		            android:layout_gravity="right"
		            android:maxLength="80"
		            android:hint="less than 20 character"
		            android:imeOptions="actionDone"
		            android:scrollHorizontally="true"
		            android:scrollbars="horizontal"
		            android:singleLine="true"
		            android:padding="6dp"
		            android:textSize="12sp" />
		          <EditText
		            android:id="@+id/password"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="8dp"
		            android:layout_weight="0.6"
		            android:layout_gravity="right"
		            android:maxLength="80"
		            android:hint="less than 20 character"
		            android:imeOptions="actionDone"
		            android:scrollHorizontally="true"
		            android:scrollbars="horizontal"
		            android:singleLine="true"
		            android:padding="6dp"
		            android:textSize="12sp" />
		        <EditText
		            android:id="@+id/brandtype"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="8dp"
		            android:layout_weight="0.6"
		            android:layout_gravity="right"
		            android:maxLength="80"
		            android:hint="less than 20 character"
		            android:imeOptions="actionDone"
		            android:scrollHorizontally="true"
		            android:scrollbars="horizontal"
		            android:singleLine="true"
		            android:padding="6dp"
		            android:textSize="12sp" />
		        <EditText
		            android:id="@+id/vehicletype"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="8dp"
		            android:layout_weight="0.6"
		            android:layout_gravity="right"
		            android:maxLength="80"
		            android:hint="less than 20 character"
		            android:imeOptions="actionDone"
		            android:scrollHorizontally="true"
		            android:scrollbars="horizontal"
		            android:singleLine="true"
		            android:padding="6dp"
		            android:textSize="12sp" />
		        </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/platenumber_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="4dp"
            android:singleLine="true"
            android:text="Plate:   "
            android:textColor="#024467"
            android:textSize="12sp"
            android:textStyle="bold" />
        
        <ScrollView 
            android:id="@+id/ScrollView2"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:scrollbarStyle="outsideOverlay"
    		android:layout_toRightOf="@+id/platenumber_tag">
		        <EditText
		            android:id="@+id/plateNumber"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="8dp"
		            android:layout_weight="0.6"
		            android:layout_gravity="right"
		            android:maxLength="80"
		            android:hint="less than 20 character"
		            android:imeOptions="actionDone"
		            android:scrollHorizontally="true"
		            android:scrollbars="horizontal"
		            android:singleLine="true"
		            android:padding="6dp"
		            android:textSize="12sp" />
        </ScrollView>
    </RelativeLayout>    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

       <ScrollView 
            android:id="@+id/ScrollView3"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content">
	        <EditText
	            android:id="@+id/beatHeartPeriod"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.4"
	            android:layout_gravity="left"
	            android:maxLength="4"
	            android:hint="smaller than 1500"
	            android:imeOptions="actionDone"
	            android:scrollHorizontally="true"
	            android:scrollbars="horizontal"
	            android:singleLine="true"
	            android:numeric="integer"
	            android:padding="6dp"
	            android:textSize="12sp" />
        </ScrollView>
        
        <TextView
            android:id="@+id/GroupIDView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ScrollView3"
            android:layout_weight="0.2"
            android:singleLine="true"
            android:text="ms"
            android:textColor="#024467"
            android:padding="4dp"
            android:textSize="18sp"
            android:textStyle="bold" />
        
       <Button
            android:id="@+id/savesetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/GroupIDView"
            android:layout_weight="0.2"
            android:text="save"
            android:textColor="#024467"
            android:textStyle="bold" />
    </RelativeLayout>
        

    
</LinearLayout>