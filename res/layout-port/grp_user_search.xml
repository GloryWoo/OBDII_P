<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="300dp"  
    android:layout_height="200dp"
    android:gravity="top|center"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    android:background="#fff"
    >  
  
    <LinearLayout
        android:layout_width="match_parent"  
    	android:layout_height="40dp"
    	android:orientation="horizontal">
	<TextView
		android:id="@+id/grp_s_user"
		android:layout_width="match_parent"
		android:layout_height="32dp"	
		android:layout_weight="1"
		android:text="找人"
		android:layout_gravity="center"
		android:gravity="center"
		android:textColor="@color/black"
		android:textSize="15sp" />   
	<TextView
		android:id="@+id/grp_s_grp"
		android:layout_width="match_parent"
		android:layout_height="32dp"
		android:layout_weight="1"	
		android:text="找群组"
		android:layout_gravity="center"
		android:gravity="center"
		android:textColor="@color/black"
		android:textSize="15sp"
		android:visibility="visible"/>"
	</LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"  
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_weight="1"
	        android:layout_marginTop="0dp"
	        android:background="#80e3e3e3" 
	        android:id="@+id/grp_s_user_line"/>
	   <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_weight="1"
	        android:background="#80e3e3e3" 
	        android:id="@+id/grp_s_grp_line"/>        
    </LinearLayout>
	<EditText
        android:id="@+id/grp_s_user_e"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:gravity="left|center"	
        android:textColor="@color/black"
        android:hint="好友名称/昵称"        
        android:textSize="15sp"/>	
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:background="#80e3e3e3" />	
    <RelativeLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">        
	    <Button
	        android:id="@+id/group_search_user_b"
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_centerVertical="true"
			android:background="@drawable/shape_card_b"
	        android:textColor="@color/white"
	        android:text="查找"
	        android:textSize="16sp"/>
  	</RelativeLayout>
</LinearLayout>  