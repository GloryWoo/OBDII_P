<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" 
        android:gravity="center">

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="left|center"
            android:layout_weight="0.8"
            android:text="用户名"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/reset_username"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:layout_weight="2.8"
            android:hint="手机号"
            android:text=""
            android:textSize="18sp" 
            android:inputType="number"
            android:background="#ffffffff"/>
    </LinearLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_marginTop="4dp"
	    android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
	    android:background="#80e3e3e3"
	    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/confrim_code_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.8"
            android:text="验证码"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/confrim_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:layout_weight="1.5"
            android:hint="输入验证码"
            android:inputType="number"
            android:text=""
            android:textSize="18sp"
            android:background="#ffffffff" />

        <TextView
            android:id="@+id/get_confrim_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"            
            android:layout_weight="1.3"
            android:text="获取验证码"
            android:textColor="#00b7cb"
            android:textSize="18sp" 
            android:gravity="center"
            android:background="#ffffff"/>
    </LinearLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_marginTop="4dp"
	    android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
	    android:background="#80e3e3e3"
	    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" 
        android:gravity="center">

        <TextView
            android:id="@+id/passwd_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.8"
            android:enabled="false"
            android:text="密    码"            
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/passwd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:layout_weight="2.8"
            android:enabled="false"
            android:hint="新密码"
            android:inputType="textPassword"
            android:text=""
            android:textSize="18sp"
            android:background="#ffffffff" />
    </LinearLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_marginTop="4dp"
	    android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
	    android:background="#80e3e3e3"
	    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/passwd_cfm_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.8"
            android:enabled="false"
            android:singleLine="true"
            android:text="确    认"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/passwd_cfm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:layout_weight="2.8"
            android:enabled="false"
            android:hint="新密码确认"
            android:inputType="textPassword"
            android:text=""
            android:textSize="18sp"
            android:background="#ffffffff" />
    </LinearLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_marginTop="4dp"
	    android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
	    android:background="#80e3e3e3"
	    />
	
     <TextView
         android:id="@+id/resetpasswd"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:background="@drawable/shape_card_b"
         android:gravity="center"
         android:text="重置密码"
         android:textStyle="bold"
         android:textColor="@color/white"
         android:textSize="18sp" />

   
</LinearLayout>