<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/car_rela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Car" >
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@drawable/bottom_bar">
    
    <ImageView
        android:layout_width="24dp"
    	android:layout_height="24dp"
    	android:layout_centerVertical="true"
    	android:layout_alignParentLeft="true"
    	android:layout_marginLeft="8dp"
    	android:gravity="center"
    	android:id="@+id/car_back"	    	
    	android:src="@drawable/icon_back"
    	android:visibility="visible"/>

    <TextView
        android:layout_width="50dp"
    	android:layout_height="35dp"
    	android:layout_centerVertical="true"
    	android:layout_centerHorizontal="true"
    	android:gravity="center"
    	android:id="@+id/car_name"	    	
    	android:textColor="@color/white"
    	android:text="车"
    	android:textSize="18sp"
    	android:textStyle="bold"/> 
   </RelativeLayout>
   
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/weizh_rela"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="@drawable/selector_car_backgrd"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/weizh_icon"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/violet" />

            <TextView
                android:id="@+id/weizh_text"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_below="@id/weizh_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:gravity="center|center"
                android:text="违章查询"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drive_habit_rela"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="@drawable/selector_car_backgrd"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/drive_habit_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/drive" />

            <TextView
                android:id="@+id/drive_habit_text"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_below="@id/drive_habit_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:gravity="center|center"
                android:text="驾驶习惯"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dtc_rela"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="@drawable/selector_car_backgrd"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/dtc_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/car_state" />

            <TextView
                android:id="@+id/dtc_text"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_below="@id/dtc_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:gravity="center|center"
                android:text="车辆状态"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal" >



        <RelativeLayout
            android:id="@+id/bcall_rela"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="@drawable/selector_car_backgrd"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/bcall_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bcall" />

            <TextView
                android:id="@+id/bcall_text"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_below="@id/bcall_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:gravity="center|center"
                android:text="B-Call"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ecall_rela"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="@drawable/selector_car_backgrd"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ecall_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ecall" />

            <TextView
                android:id="@+id/ecall_text"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_below="@id/ecall_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:gravity="center|center"
                android:text="E-Call"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

 
          <RelativeLayout
            android:id="@+id/gas_consume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_car_backgrd"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/gas_consume_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/gas_consume" />

            <TextView
                android:id="@+id/gas_consume_text"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_below="@id/gas_consume_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:gravity="center|center"
                android:text="瞬时油耗"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal" >
       <RelativeLayout
            android:id="@+id/carcontrol_rela"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="@drawable/selector_car_backgrd"            
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/carcontrol_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/set"/>

            <TextView
                android:id="@+id/carcontrol_text"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_below="@id/carcontrol_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:gravity="center|center"
                android:text="设置"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>
      


		<RelativeLayout
            android:id="@+id/behavior_switch"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="@drawable/selector_car_backgrd"            
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/carmonitor_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/car_monitor"/>

            <TextView
                android:id="@+id/behavior_switch_text"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_below="@id/carmonitor_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:gravity="center|center"
                android:text="行车记录"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>
		<View
		    android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>