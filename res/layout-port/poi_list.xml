<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:background="@color/lightgray"
	    android:id="@+id/expand_rela"
	    android:layout_alignParentTop="true">	    		 	
	    <ImageView
	        android:layout_width="50dp"
	    	android:layout_height="30dp"
	    	android:id="@+id/expand_icon"
	    	android:layout_centerHorizontal="true"
	    	android:layout_centerVertical="true" 
	    	android:src="@drawable/expand_s"	
	    	/>

	</RelativeLayout>
	<com.ctg.util.PoiScrollView
	android:layout_width="match_parent"
    android:layout_height="730dp"
    android:layout_below="@id/expand_rela"
    android:id="@+id/poi_scroll"
    android:orientation="vertical"
    android:background="@color/white">
	    
		<LinearLayout
		android:layout_width="match_parent"
	    android:layout_height="670dp"
	    android:id="@+id/poi_linear"
	    android:orientation="vertical"
	    android:background="@color/white">
		    <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:background="@color/white"	    
		    android:id="@+id/dragdown_rela"
		    android:visibility="invisible">
		    	<RelativeLayout
				    android:layout_width="wrap_content"
				    android:layout_height="40dp"
				    android:layout_centerHorizontal="true">
				    <ProgressBar 
				      	android:id="@+id/dragdown_progress"
				      	android:layout_width="wrap_content" 
				      	android:layout_height="40dp"		      
				      	style="?android:attr/progressBarStyleSmall"
				      	android:visibility="visible"/>
					<TextView
				        android:layout_width="wrap_content"
				    	android:layout_height="40dp"
				    	android:layout_gravity="center_vertical|center_horizontal"
				    	android:layout_toRightOf="@id/dragdown_progress"
				    	android:layout_marginLeft="4dp"
				    	android:gravity="center|center"
				    	android:id="@+id/drag_down_text"
				    	android:text="下拉加载上一页"
				    	android:singleLine="true"
				    	android:textSize="16sp"
				    	android:visibility="visible"/>
				</RelativeLayout>
			</RelativeLayout>
	
		    <ListView
		        android:id="@+id/poi_list"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" 
		        android:clickable="false">
		    </ListView>
	
		    <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:background="@color/white"	    
		    android:id="@+id/dragup_rela"
		    android:visibility="visible">
		    	<RelativeLayout
				    android:layout_width="wrap_content"
				    android:layout_height="40dp"
				    android:layout_centerHorizontal="true">
				    <ProgressBar 
				      	android:id="@+id/dragup_progress"
				      	android:layout_width="wrap_content" 
				      	android:layout_height="40dp"		      
				      	style="?android:attr/progressBarStyleSmall"
				      	android:visibility="invisible"/>
					<TextView
				        android:layout_width="wrap_content"
				    	android:layout_height="40dp"
				    	android:layout_gravity="center_vertical|center_horizontal"
				    	android:layout_toRightOf="@id/dragup_progress"
				    	android:layout_marginLeft="4dp"
				    	android:gravity="center|center"
				    	android:id="@+id/drag_up_text"
				    	android:text="上拉加载下一页"
				    	android:singleLine="true"
				    	android:textSize="16sp"
				    	android:visibility="visible"/>
				</RelativeLayout>
			</RelativeLayout>
   		</LinearLayout>
   		
    </com.ctg.util.PoiScrollView>
</RelativeLayout>