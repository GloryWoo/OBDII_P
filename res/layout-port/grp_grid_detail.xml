<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#eeeeee">

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@drawable/bottom_bar">
    
    <RelativeLayout
        android:layout_width="30dp"
    	android:layout_height="30dp"
    	android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"
	    android:id="@+id/grp_grid_back"
	    android:layout_marginLeft="4dp"
    	android:gravity="center">
	    <ImageView
	        android:layout_width="24dp"
	    	android:layout_height="24dp"
	    	android:gravity="center"	    		    	
	    	android:src="@drawable/icon_back"
	    	android:visibility="visible"/>
	</RelativeLayout>

    <TextView
        android:id="@+id/grp_grid_tv"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="群组信息(0人)"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />     
   </RelativeLayout>
    

    <GridView
        android:id="@+id/grp_grid"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#fff"
        android:columnWidth="80dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="15dp"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="10dp">
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp">
	    <TextView
	        android:id="@+id/grp_grid_shield"
	        android:layout_width="wrap_content"
	        android:layout_height="35dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="10dp"
	        android:gravity="center"
	        android:text="屏蔽群"
	        android:textColor="@color/black"
	        android:textSize="18sp"/>  
	   <ImageView
	       android:id="@+id/shield_i"
	       android:layout_width="50dp"
	       android:layout_height="30dp"
	       android:layout_centerVertical="true"
	       android:layout_alignParentRight="true"
	       android:layout_marginRight="10dp"
	       android:src="@drawable/icon_radio_disable"/>           		
   	</RelativeLayout>
   	<View
   	    android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeee"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"/>
   	<Button
        android:id="@+id/grp_clear_record"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:paddingLeft="10dp"
        android:gravity="left|center"
        android:text="清空历史记录"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@color/white"/>  
</LinearLayout>
   	<TextView
        android:id="@+id/del_quit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="删除并退出"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/shape_red" />  
</LinearLayout>