<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape= "oval">
    
	<solid android:color="#0000" />
	
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />


    <stroke
        android:width="2dp"
        android:color="#FF6666" />

   
    <gradient
         android:startColor="#F000" 
         android:endColor="#F000"
         android:type="linear"
         android:angle="90"/>
    
 
    <corners android:radius="0dp" />

    
</shape>