<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background">
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#80214861"
    android:gravity="top|center">
	    <ImageView  
	        android:id="@+id/logo"  
	        android:layout_width="80dp"  
	        android:layout_height="80dp" 
	        android:layout_marginTop="12dp" 
	        android:src="@drawable/logo_trans"/>
	
	   <TextView
	        android:id="@+id/username_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="12dp"
	        android:text="欢迎登录优车宝"
	        android:textColor="@color/white"
	        android:textSize="18sp"
			android:textStyle="bold"/>
	       
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
	        android:orientation="horizontal" 
	        android:gravity="center"
	        android:layout_marginTop="10dp">
	
	        <ImageView
	            android:id="@+id/username_i"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:src="@drawable/headbody"
	            android:layout_gravity="center"/>
	
	        <EditText
	            android:id="@+id/username"
	            android:layout_width="320dp"
	            android:layout_height="32dp"
	            android:layout_marginLeft="10dp"
	            android:text=""
	            android:hint="手机号"
	            android:textSize="15sp" 
	            android:background="#ffffffff"
	            android:imeOptions="flagNoExtractUi"/>
	        <TextView
	            android:id="@+id/no_account_need_reg"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"  
	            android:layout_marginLeft="20dp"                     
	            android:text="注 		  册"
	            android:textSize="16sp" 
	            android:textColor="#65ffffff"/>
	    </LinearLayout>
		<View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_marginTop="10dp"
		    android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
		    android:background="#80e3e3e3"
		    />
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginTop="12dp"
		    android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:orientation="horizontal" 
            android:gravity="center">
	
	        <ImageView
	            android:id="@+id/pswd_i"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_gravity="center"
	            android:src="@drawable/pswd"/>
	
	        <EditText
	            android:id="@+id/passwd"
	            android:layout_width="320dp"
	            android:layout_height="32dp"
	            android:layout_marginLeft="9dp"
	            android:inputType="textPassword"
	            android:text=""
	            android:hint="输入密码"
	            android:textSize="15sp" 
	            android:background="#ffffffff"
	            android:imeOptions="flagNoExtractUi|actionDone"/>
	        <TextView
	            android:id="@+id/login_forgetpswd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:text="忘记密码"
	            android:textSize="16sp" 
	            android:textColor="#65ffffff"/>	
	    </LinearLayout>
	
	    <View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_marginTop="10dp"
		    android:background="#80e3e3e3"
			android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"	    
		    />
    <LinearLayout 
	    android:layout_width="wrap_content"  
	    android:layout_height="40dp"  
	    android:orientation="horizontal" 
	    android:gravity="center"
	    android:layout_marginTop="16dp"
	    android:id="@+id/enter_l"> 
	    <TextView
            android:id="@+id/login_login_tv"
            android:layout_width="320dp"
            android:layout_height="30dp"
			android:layout_marginTop="0dp"
			android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
			android:gravity="center"
            android:text="登录"
            android:background="@drawable/shape_card_b"
            android:textColor="@color/white"
            android:textSize="18sp" 
            android:textStyle="bold"/>
	        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="直接进入"
	        android:textColor="@color/white"
	        android:textSize="14sp"/>
	        <ImageView  
	        android:id="@+id/enter"  
	        android:layout_width="20dp"  
	        android:layout_height="23dp" 
	        android:layout_marginLeft="4dp"	         
	        android:src="@drawable/enter"/>
	</LinearLayout> 

	</LinearLayout>
</LinearLayout>