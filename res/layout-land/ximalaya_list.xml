<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#e0e0e0">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal" 
    android:gravity="center"
    android:background="#ffffff">
    	<ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/fm_back_img"
            android:src="@drawable/back_arrow"
            android:layout_marginLeft="0dp"/>
    	<TextView
    	    android:layout_width="0dp" 
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:id="@+id/fm_state"
    	    android:text="国家台"
    	    style="@style/item_text_l_info"
    	    android:gravity="center"/>
    	<TextView
    	    android:layout_width="0dp" 
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:id="@+id/fm_province"
    	    android:text="省市台"
    	    style="@style/item_text_l_info"
    	    android:gravity="center"/>
    	<TextView
    	    android:layout_width="0dp" 
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:id="@+id/fm_internet"
    	    android:text="网络台"
    	    style="@style/item_text_l_info"
    	    android:gravity="center"/>    	    	
	</LinearLayout>  
    <com.ctg.util.HorizontalListView
        android:id="@+id/province_city"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="6dp"
        android:visibility="gone" 
        android:background="#ffffff"/>	
    <ListView
        android:id="@+id/fm_radio_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:visibility="visible" 
        android:background="#ffffff"/>    
</LinearLayout>    