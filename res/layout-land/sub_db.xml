<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    >
	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/db_page0"    
	>
		<LinearLayout
		    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="2"
    		android:orientation="vertical">
    		<LinearLayout
		    android:layout_width="150dp"
    		android:layout_height="50dp"
    		android:layout_marginLeft="20dp"
    		android:layout_marginTop="15dp"
    		android:background="@drawable/db_point_back"
    		android:orientation="horizontal"
    		android:gravity="center">
    		<TextView
    		    android:layout_width="40dp"
    			android:layout_height="24dp"
    			android:text="得分"
    			style="@style/db_point_text"/>
    		<TextView
    		    android:layout_width="40dp"
    			android:layout_height="24dp"
    			android:layout_marginLeft="12dp"
    			android:text="42"
    			android:id="@+id/db_score"
    			style="@style/db_point_text"/>
    		<ImageView
    		    android:layout_width="30dp"
    			android:layout_height="30dp"
    			android:src="@drawable/score"/>"
			</LinearLayout>
			<LinearLayout
		    android:layout_width="150dp"
    		android:layout_height="50dp"
    		android:layout_marginLeft="20dp"
    		android:layout_marginTop="15dp"
    		android:background="@drawable/db_point_back"
    		android:gravity="center">
    		<TextView
    		    android:layout_width="45dp"
    			android:layout_height="24dp"
    			android:text="金币"
    			style="@style/db_point_text"/>
    		<TextView
    		    android:layout_width="40dp"
    			android:layout_height="24dp"
    			android:layout_marginLeft="12dp"
    			android:text="14"
    			android:id="@+id/db_gold"
    			style="@style/db_point_text"/>
    		<ImageView
    		    android:layout_width="30dp"
    			android:layout_height="30dp"
    			android:src="@drawable/gold"/>    		    
			</LinearLayout>
			
		<TextView
		    android:layout_width="150dp"
    		android:layout_height="50dp"
    		android:layout_marginLeft="190dp"
    		android:layout_marginTop="130dp"
    		android:id="@+id/start_stop_routine"
    		style="@style/db_point_text"
    		android:background="@drawable/db_point_back"
    		android:text="开始行程"
    		android:gravity="center"/>
    	</LinearLayout>
		<LinearLayout
		    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1.2"
    		android:background="#e0ffffff"
    		android:orientation="vertical"
    		android:gravity="top|center">
			<FrameLayout
				android:layout_width="match_parent"
    			android:layout_height="0dp"
    			android:layout_weight="4.1">
    			<TextView
    			android:layout_width="42dp"
    			android:layout_height="42dp"
    			android:layout_gravity="top|right"
    			android:layout_marginTop="3dp"
    			android:layout_marginRight="5dp"
    			android:id="@+id/statis_btn"
    			android:text="统计"
    			android:textSize="17sp"
    			android:textStyle="bold"
    			android:gravity="center"
    			android:textColor="#65B4DC"
    			android:background="@drawable/db_statis_font"/>
	    		<com.github.mikephil.charting.charts.PieChart
	            android:id="@+id/db_chart_safety"
	            android:layout_width="150dp"
	            android:layout_height="150dp"
	            android:layout_gravity="center"
	            android:layout_marginTop="3dp" 
	            android:clickable="false"
	            />
	    		<com.github.mikephil.charting.charts.PieChart
	            android:id="@+id/db_chart_economic"
	            android:layout_width="112dp"
	            android:layout_height="112dp"
	            android:layout_gravity="center"
	            android:layout_marginTop="3dp" 
	            android:clickable="false"
	            />
	    		<com.github.mikephil.charting.charts.PieChart
	            android:id="@+id/db_chart_comfort"
	            android:layout_width="74dp"
	            android:layout_height="74dp"
	            android:layout_gravity="center"
	            android:layout_marginTop="3dp" 
	            android:clickable="false"
	            />	    			    		
    		</FrameLayout>
    		<LinearLayout
    		    android:layout_width="match_parent"
    			android:layout_height="0dp"
    			android:layout_weight="1"
    			android:layout_marginTop="4dp"
    			android:orientation="horizontal">
	    		 

            <LinearLayout
                android:id="@+id/detail_safe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/red_circle"/>"

                <TextView
                    android:id="@+id/drive_detail_habit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="安全性"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"                    
                    android:background="#65B4DC"
                    android:id="@+id/safety_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_economic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" >

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/green_circle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="经济性"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:visibility="invisible"
                    android:layout_marginTop="4dp" 
                    android:background="#65B4DC"
                    android:id="@+id/economic_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_comfort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" >

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/yellow_circle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="舒适性"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"                    
                    android:background="#65B4DC"
                    android:visibility="invisible"
                    android:id="@+id/comfort_line"/>
            </LinearLayout>
    		</LinearLayout>
    		<FrameLayout
    		    android:layout_width="match_parent"
    			android:layout_height="0dp"
    			android:layout_weight="2.8"
    			android:layout_marginTop="6dp"
    			android:layout_marginLeft="30dp"
    			android:layout_marginRight="30dp">
    		<LinearLayout
    		    android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:gravity="center"
    			android:orientation="vertical">
             <RelativeLayout
                android:id="@+id/drive_detail_rela_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                >
                <ImageView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/drive_detail_img_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_exceed" />
		
                <TextView
                    android:id="@+id/drive_detail_t_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/drive_detail_img_1"
                    android:text="超速行驶"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/drive_detail_v_t_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/drive_detail_t_1"
                    android:text="次"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>
 			<RelativeLayout
                android:id="@+id/drive_detail_rela_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center">
                <ImageView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/drive_detail_img_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/brk_font" />
		
                <TextView
                    android:id="@+id/drive_detail_t_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/drive_detail_img_2"
                    android:text="急刹急停"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/drive_detail_v_t_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/drive_detail_t_2"
                    android:text="次"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>
 			<RelativeLayout
                android:id="@+id/drive_detail_rela_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center">
                <ImageView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/drive_detail_img_3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_wheel" />
		
                <TextView
                    android:id="@+id/drive_detail_t_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/drive_detail_img_3"
                    android:text="紧急转弯"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/drive_detail_v_t_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/drive_detail_t_3"
                    android:text="次"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>                                    
    		</LinearLayout> 

			  		    		
    		</FrameLayout>   		
		</LinearLayout>
	</LinearLayout>
	
	
	
	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/db_page2"
    android:visibility="gone"
    android:orientation="horizontal"
    android:background="#065b92"
	>
		<LinearLayout
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:id="@+id/db_page2_l"
	    android:orientation="vertical"
	    android:layout_weight="0.372"
	    android:padding="10dp"
	    android:gravity="top|center"
		>
    		<LinearLayout
    			android:layout_width="match_parent"
	    		android:layout_height="0dp"
	    		android:layout_weight="1"
	    		android:gravity="left|center"
	    		>  
	    		<ImageView
	    			android:layout_width="28dp"
	    			android:layout_height="28dp"
	    			android:layout_marginLeft="1dp"
	    			android:id="@+id/stat_back"
	    			android:src="@drawable/selector_img_back"
	    			/>  
	    		<TextView
	    		    android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:layout_marginLeft="10dp"
	    			android:id="@+id/stat_title"
	    			android:text="用户总分分布情况"
	    			android:layout_gravity="center"
	    			android:gravity="center"
	    			style="@style/db_statistic_text_b"/>"
    		</LinearLayout>
    		
    		<com.github.mikephil.charting.charts.PieChart
	            android:id="@+id/stat_score_pie"
	            android:layout_width="150dp"
	            android:layout_height="0dp"	
	            android:layout_weight="5"            
	            android:layout_marginTop="5dp" 
	            android:clickable="false"
	            />
    		<LinearLayout
    			android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:orientation="horizontal"
	            android:layout_weight="1.6"
	            android:gravity="center"
	            >
	    		<LinearLayout
	    			android:layout_width="0dp"
		            android:layout_height="40dp"
		            android:layout_weight="1"
		            android:orientation="vertical"
		            android:gravity="center"
	            >
	    		<ImageView
	    		    android:layout_width="10dp"
	    		    android:layout_height="10dp"
	    		    android:background="@drawable/shape_circle_green"/>
	    		<TextView
	    		    android:layout_width="wrap_content"
	    		    android:layout_height="wrap_content"
	    		    style="@style/db_statistic_text_s"
	    		    android:text="90-100"/>
    			</LinearLayout>   
	    		<LinearLayout
	    			android:layout_width="0dp"
		            android:layout_height="40dp"
		            android:layout_weight="1"
		            android:orientation="vertical"
		            android:gravity="center"
	            >
	    		<ImageView
	    		    android:layout_width="10dp"
	    		    android:layout_height="10dp"
	    		    android:background="@drawable/shape_circle_blue"/>
	    		<TextView
	    		    android:layout_width="wrap_content"
	    		    android:layout_height="wrap_content"
	    		    style="@style/db_statistic_text_s"
	    		    android:text="80-90"/>
    			</LinearLayout> 
	    		<LinearLayout
	    			android:layout_width="0dp"
		            android:layout_height="40dp"
		            android:layout_weight="1"
		            android:orientation="vertical"
		            android:gravity="center"
	            >
	    		<ImageView
	    		    android:layout_width="10dp"
	    		    android:layout_height="10dp"
	    		    android:background="@drawable/shape_circle_yellow"/>
	    		<TextView
	    		    android:layout_width="wrap_content"
	    		    android:layout_height="wrap_content"
	    		    style="@style/db_statistic_text_s"
	    		    android:text="60-80"/>
    			</LinearLayout> 
	    		<LinearLayout
	    			android:layout_width="0dp"
		            android:layout_height="40dp"
		            android:layout_weight="1"
		            android:orientation="vertical"
		            android:gravity="center"
	            >
	    		<ImageView
	    		    android:layout_width="10dp"
	    		    android:layout_height="10dp"
	    		    android:background="@drawable/shape_circle_red"/>
	    		<TextView
	    		    android:layout_width="wrap_content"
	    		    android:layout_height="wrap_content"
	    		    style="@style/db_statistic_text_s"
	    		    android:text="0-60"/>
    			</LinearLayout>     			    			    			
    		</LinearLayout>    
    		<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:orientation="horizontal"
			    android:layout_weight="1.8"
			    android:gravity="center">
	    		<TextView
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:text="得分"
	    			style="@style/db_statistic_text_b"/>
	    		<TextView
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:id="@+id/stat_score_val"
	    			android:layout_marginLeft="20dp"	  
	    			android:text="90"
	    			style="@style/db_statistic_text_b"/>	  
	    		<ImageView
	    		    android:layout_width="25dp"
	    		    android:layout_height="25dp"
	    		    android:layout_marginLeft="15dp"
	    		    android:src="@drawable/score_sld"/>	  		
	    	</LinearLayout>
    	</LinearLayout>
    	<LinearLayout
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:id="@+id/db_page2_r"
	    android:orientation="vertical"
	    android:layout_weight="0.618"
	    android:gravity="center"
	    android:padding="8dp"
		>
		<TextView
   		    android:layout_width="wrap_content"
   			android:layout_height="0dp"   			
   			android:layout_weight="1"
   			android:id="@+id/stat_title_history"
   			android:text="历史行程得分分布情况"
   			android:layout_gravity="center"
   			android:gravity="center"
   			style="@style/db_statistic_text_b"/>
   		<LinearLayout
   			android:layout_width="200dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.3"
            android:gravity="center"
            >
    		<LinearLayout
    			android:layout_width="0dp"
	            android:layout_height="40dp"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            android:gravity="center"
	            android:id="@+id/per_month_l"	            
            >
    		<TextView
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    style="@style/db_statistic_text_m"
    		    android:text="按月"/>
    		 <ImageView 
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:visibility="visible"
                   android:layout_marginTop="4dp" 
                   android:background="#65B4DC"
                   android:id="@+id/per_month_line"/>

   			</LinearLayout>   
    		<LinearLayout
    			android:layout_width="0dp"
	            android:layout_height="40dp"
	            android:layout_weight="1"
	            android:layout_marginLeft="20dp"
	            android:orientation="vertical"
	            android:gravity="center"
	            android:id="@+id/per_day_l"	
            >
    		<TextView
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    style="@style/db_statistic_text_m"
    		    android:text="按日"/>
    		 <ImageView 
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:visibility="invisible"
                   android:layout_marginTop="4dp" 
                   android:background="#65B4DC"
                   android:id="@+id/per_day_line"/>
   			</LinearLayout>   
    	</LinearLayout>		
    	<com.github.mikephil.charting.charts.LineChart
            android:id="@+id/stat_hist_line_chrt"
            android:layout_width="match_parent"
            android:layout_height="0dp"	
            android:layout_weight="5.2"            
            android:layout_margin="5dp" 
            android:clickable="false"
            />
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:orientation="horizontal"
		    android:layout_weight="1.8"
		    android:gravity="center">
    		<TextView
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="金币"
    			style="@style/db_statistic_text_b"/>
    		<TextView
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:id="@+id/stat_gold_val"
    			android:layout_marginLeft="20dp"	  
    			android:text="1120"
    			style="@style/db_statistic_text_b"/>	  
    		<ImageView
    		    android:layout_width="25dp"
    		    android:layout_height="25dp"
    		    android:layout_marginLeft="15dp"
    		    android:src="@drawable/gold_sld"/>	  		
    	</LinearLayout>    	
    	</LinearLayout>	
	</LinearLayout>
</FrameLayout>